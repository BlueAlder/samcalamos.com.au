baseURL = "https://www.samcalamos.com.au/"
# include content marked as draft
buildDrafts = false
# include content with publishdate in the future
buildFuture = false
# include content already expired
buildExpired = false
# enable this to make all relative URLs relative to content root. Note that this does not affect absolute URLs.
relativeURLs = true
disableRSS = true
enableRobotsTXT = true
editor = "nano"
languageCode = "en"
language = "en"
theme = "hugo-coder"
title = "Sam Calamos"

paginate = 20

pygmentsstyle = "bw"
pygmentscodefences = true
pygmentscodefencesguesssyntax = true

disableComments  = true
disqusShortname = "yourdiscussshortname"

[permalinks]
  fixed = ":title/"
  posts = "posts/:slug/"

[params]
  author = "Sam Calamos"
  colorScheme = "dark"
  # email does still work but is deprecated.
  # use [params.contact.email] instead.
  #email = "john.doe@example.com"
  #  = "Landing Page"
  info = "I work in the Clouds ‚òÅ"
  avatarURL = "images/BlueAlder_DP.png"
  avatarSize = "size-xl"
  favicon_32 = "images/favicon/favicon-32x32.png"
  favicon_16 = "images/favicon/favicon-16x16.png"
  error404 = "There is no such page."
  hideCredits = true
  customCSS = ["css/styles.css"]

